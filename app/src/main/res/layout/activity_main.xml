<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ru.taxi.socket.MainActivity">

    <Button
        android:id="@+id/retrofitButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/activity_vertical_margin"
        android:textSize="22sp"
        android:text="Retrofit 2 Register"
       />
    <Button
        android:id="@+id/retrofitConfirmButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/activity_vertical_margin"
        android:textSize="22sp"
        android:layout_toRightOf="@id/retrofitButton"
        android:text="Retrofit 2 Confirm"
        />



    <Button
        android:id="@+id/connectButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:padding="@dimen/activity_vertical_margin"
        android:textSize="22sp"
        android:text="Connect..."
        android:layout_below="@id/retrofitButton"/>

    <Button
        android:id="@+id/upButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/activity_vertical_margin"
        android:textSize="22sp"
        android:text="HttpUpLoader"
        android:layout_below="@id/connectButton"/>

    <Button
        android:id="@+id/connectNewButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/activity_vertical_margin"
        android:textSize="22sp"
        android:text="New Connect ..."
        android:layout_below="@id/connectButton"
        android:layout_toRightOf="@id/upButton"/>

    <Button
        android:id="@+id/sampleButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/activity_vertical_margin"
        android:textSize="22sp"
        android:text="Samples Loader"
        android:layout_below="@id/connectNewButton"/>

    <Button
        android:id="@+id/balanceButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/activity_vertical_margin"
        android:textSize="22sp"
        android:text="Balance Taxi"
        android:layout_below="@id/sampleButton"/>

    <Button
        android:id="@+id/phoneButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/activity_vertical_margin"
        android:textSize="22sp"
        android:text="Phone Number"
        android:layout_below="@+id/sampleButton"
        android:layout_toRightOf="@id/balanceButton"/>

    <Button
        android:id="@+id/pingButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:padding="@dimen/activity_vertical_margin"
        android:textSize="22sp"
        android:text="PING Taxi"
        android:layout_toRightOf="@id/balanceButton"
        android:layout_below="@id/connectNewButton"/>



    <ProgressBar
        android:id="@+id/progressBar"
        style="@android:style/Widget.ProgressBar.Large"
        android:layout_centerInParent="true"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />


</RelativeLayout>
